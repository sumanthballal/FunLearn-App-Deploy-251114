    },
    {
      "label": "Activate venv (Windows PowerShell)",
      "type": "shell",
      "command": ".\\.venv\\Scripts\\Activate.ps1",
      "presentation": { "reveal": "always" }
    },
    {
      "label": "Install backend deps",
      "type": "shell",
      "command": ".\\.venv\\Scripts\\python -m pip install -r backend\\requirements.txt",
      "presentation": { "reveal": "always" }
